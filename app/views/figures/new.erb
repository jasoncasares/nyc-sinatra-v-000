<h1>Create a new <strong style="color: red">Figure</strong></h1>
<form method="POST" action="/figures">
  <p><strong style="color: red">Figure</strong> Name: <input type="text" name="figure[name]" id="figure_name"></p>
  <p><strong style="color: blue">Titles</strong>:</p>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>"><%=title.name%></input>
  <% end %>
  <p><strong style="color: green">Landmarks</strong>:</p>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id%>"><%=landmark.name%></input>
  <% end %>
  <p> Create a new <strong style="color: blue">Title</strong> or <strong style="color: green">Landmark</strong></p>
  <p><strong style="color: blue">Title</strong>: <input type="text" name="title[name]" id="new_title"></p>
  <p><strong style="color: green">Landmark</strong> Name: <input type="text" name="landmark[name]" id="new_landmark"></p>
  <input type="submit" value="Create New Figure">
</form>
