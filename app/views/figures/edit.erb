<h1><strong style="color: red">Figure</strong> Edit: <%=@figure.name%></h1>
<form method="POST" action="/figures/<%=@figure.id%>">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <p>Name: <input type="text" name="figure[name]" id="figure_name" placeholder="<%=@figure.name%>"></p>
  <p><strong style="color: blue">Titles</strong>:</p>
  <% Title.all.each do |title| %>
    <p><input type="checkbox" id="<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title)%>><%=title.name%></p>
  <% end %>
  <p><strong style="color: green">Landmarks</strong>:</p>
  <% Landmark.all.each do |landmark| %>
    <p><input type="checkbox" id="<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id%>"<%='checked' if @figure.landmarks.include?(landmark)%>><%=landmark.name%></p>
  <%end%>
  <p>Create a new <strong style="color: blue">Title</strong> or <strong style="color: green">Landmark</strong></p>
  <p><strong style="color: blue">Title</strong>: <input type="text" name="title[name]" id="new_title"></p>
  <p><strong style="color: green">Landmark</strong>: <input type="text" name="landmark[name]" id="new_landmark"></p>
  <input type="submit" value="Edit Figure">
</form>
